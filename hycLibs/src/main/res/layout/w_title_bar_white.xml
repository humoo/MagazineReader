<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootTitleBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusBar_view_height"
        android:background="@color/colorPrimary" />

    <RelativeLayout
        android:id="@+id/rlTitleBar"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/title_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_x32" />

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/icon_action_left_width"
            android:layout_height="@dimen/icon_action_left_width"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/paddingLR"
            android:clickable="true"
            android:padding="3dp"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivAction"
            android:layout_width="@dimen/icon_action_right_width"
            android:layout_height="@dimen/icon_action_right_width"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px30dp"
            android:clickable="true"
            android:padding="3dp"
            android:src="@drawable/img_default"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvRightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px30dp"
            android:clickable="true"
            android:padding="3dp"
            android:text="文字"
            android:textColor="@color/white"
            android:textSize="@dimen/text_x28"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>